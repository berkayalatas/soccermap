{
  "editor.rulers": [100],
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true,
    "**/coverage": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true, // auto format the file on each save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
